{
  "name": "AppUser",
  "description": [
    "Both passengers and drivers are AppUsers. The difference is that drivers",
    "have userRole `Driver` in order to access driver's application and properties."
  ],
  "plural": "AppUsers",
  "base": "User",
  "strict": true,
  "idInjection": true,
  "indexes": {},
  "options": {
    "validateUpsert": true
  },
  "hidden": [
    "password"
  ],
  "properties": {
    "location": {
      "type": "object",
      "description": "Should contain `Number` properties `long` and `lat`"
    }
  },
  "validations": [],
  "relations": {
    "interestingRoutes": {
      "type": "hasMany",
      "model": "Route"
    },
    "favouriteRoutes": {
      "type": "hasMany",
      "model": "Route"
    },
    "activeRoute": {
      "type": "hasOne",
      "model": "Route"
    },
    "storedRoutes": {
      "type": "hasMany",
      "model": "Route"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
